@model MvcStok.Models.Entity.TBLKATEGORI
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(m => m.KATEGORIID)
    @Html.TextBoxFor(m => m.KATEGORIID, new { @class = "form-control", @readonly = true })           @*Burada beginformdaki parametrelerde şu anlatılmak isteniyor: kategori içeriisnden güncelleye post edilidği yani bir etkileşim(basma vs)olduğunda kullanılsın*@


    <br />

    @Html.LabelFor(m => m.KATEGORIAD)
    @Html.TextBoxFor(m => m.KATEGORIAD, new { @class = "form-control" })

</div>
<div>
    <button class="btn btn-warning">Kategori Güncelle</button>
</div>
}


